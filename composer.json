{
    "name": "save-colombia/alegra_api_psr",
    "description": "Librería PSR para la integración de la API de Alegra",
    "type": "library",
    "version": "1.0",
    "scripts": {
        "format": "vendor/bin/pint",
        "lint": "vendor/bin/phpstan"
    },
    "autoload": {
        "psr-4": {
            "SaveColombia\\AlegraApiPsr\\": "src/"
        }
    },
    "authors": [
        {
            "name": "David Chamorro",
            "email": "soporte@savecol.com"
        }
    ],
    "require": {
        "psr/log": "^3.0",
        "psr/http-client": "^1.0.2",
        "psr/http-factory": "^1.0.2",
        "psr/http-message": "^1.1",
        "psr/event-dispatcher": "^1.0",
        "fig/http-message-util": "^1.1.5",
        "cuyz/valinor": "^1.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.10"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}